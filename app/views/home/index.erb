<div class = 'container' style='margin-top:50px'>
    <form action='/write' method='POST'>
      <div class="form-group">
        <label for="exampleInputEmail1">보내는 사람</label>
        <input type="email" name='sender' class="form-control" id="exampleInputEmail1" placeholder="email">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">받는 사람</label>
        <input type="email" name='receiver' class="form-control" id="exampleInputEmail1" placeholder="email">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">제목</label>
        <input type="text" name='title' class="form-control" id="exampleInputEmail1" placeholder="제목">
      </div>
      <div class="form-group">
        <label for="comment">내용</label>
        <textarea class="form-control" name='content' rows="5" id="comment"></textarea>
      </div>
      <button type="submit" class="btn btn-default" style="margin-top:20px">전송</button>
    </form>
</div>